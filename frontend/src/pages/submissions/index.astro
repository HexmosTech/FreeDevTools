---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Submissions from './_Submissions';

---

<BaseLayout 
  name="Tool Submissions"
  title="Submit Tool Request - Free DevTools by Hexmos"
  path="/freedevtools/submissions/"
  description="Submit your tool ideas and feature requests for Free DevTools. Help us build better developer tools by sharing your suggestions and requirements."
  canonical="https://hexmos.com/freedevtools/submissions/"
  themeColor="#3b82f6"
  keywords={['tool submissions', 'feature requests', 'developer tools', 'tool suggestions', 'open source tools']}
  ogImage="https://hexmos.com/freedevtools/tool-banners/submissions-banner.png"
  twitterImage="https://hexmos.com/freedevtools/tool-banners/submissions-banner.png"
  datePublished="2025-01-30"
  softwareVersion="1.0.0"
  features={['Submit tool requests', 'View all submissions', 'Track request status', 'Community feedback']}
>
  <Submissions client:load />
</BaseLayout>
