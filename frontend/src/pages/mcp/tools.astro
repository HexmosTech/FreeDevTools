---
import BottomPagination from '@/components/BottomPagination.astro';
import Pagination from '@/components/Pagination.astro';
import BaseLayout from '@/layouts/BaseLayout.astro';
import McpTools from './_McpTools';
import toolsData from './data/tools.json';

// Get data from JSON files
const totalTools = toolsData.pagination.total;
const totalPages = Math.ceil(toolsData.pagination.total / toolsData.pagination.perPage);
const initialTools = toolsData.tools.slice(0, 20);
const ITEMS_PER_PAGE = 20;

// SEO Data
const title = `MCP Tools - Browse ${totalTools.toLocaleString()}+ Model Context Protocol Tools | Free DevTools by Hexmos`;
const description = `Explore ${totalTools.toLocaleString()}+ MCP tools for AI agents. Find tools for web scraping, code execution, communication, and more. Browse by category and server. Free, fast, no registration required.`;
const keywords = [
  'mcp tools',
  'model context protocol tools',
  'ai agent tools',
  'mcp tool directory',
  'free mcp tools',
  'ai automation tools',
  'mcp tool browser',
  'open source mcp tools'
];

// Breadcrumb data
const breadcrumbItems = [
  { label: 'Free DevTools', href: '/freedevtools/' },
  { label: 'MCP Directory', href: '/freedevtools/mcp/' },
  { label: 'MCP Tools' }
];
---

<BaseLayout 
  name="MCP Tools"
  title={title}
  path="/freedevtools/mcp/tools/"
  description={description}
  canonical="https://hexmos.com/freedevtools/mcp/tools/"
  themeColor="#3b82f6"
  keywords={keywords}
  ogImage="https://hexmos.com/freedevtools/tool-banners/mcp-tools-banner.png"
  twitterImage="https://hexmos.com/freedevtools/tool-banners/mcp-tools-banner.png"
  datePublished="2025-01-30"
  softwareVersion="1.0.0"
  features={[
    `Browse ${totalTools.toLocaleString()}+ MCP tools`,
    'Filter by category and server',
    'Search and sort functionality',
    'Detailed tool information',
    'Server integration'
  ]}
>
  <div class="max-w-6xl mx-auto px-2 md:px-6">
    <!-- Pagination -->
    <Pagination 
      totalItems={totalTools}
      itemsPerPage={ITEMS_PER_PAGE}
      currentPage={1}
      totalPages={totalPages}
      itemsLabel="tools"
    />
    
    <McpTools 
      initialTools={initialTools}
      pagination={toolsData.pagination}
      filters={toolsData.filters}
      totalPages={totalPages}
      breadcrumbItems={breadcrumbItems}
      client:load 
    />
    
    <!-- Bottom Pagination -->
    <BottomPagination 
      totalItems={totalTools}
      currentPage={1}
      totalPages={totalPages}
      itemsLabel="tools"
    />
  </div>
</BaseLayout>
