---
import BaseLayout from '@/layouts/BaseLayout.astro';
import clientsData from '../../data/clients.json';
import McpClientDetail from '../_McpClientDetail';

export async function getStaticPaths() {
  // Generate static paths for all clients
  const paths = clientsData.clients.map((client) => ({
    params: { clientId: client.id },
    props: { client }
  }));

  return paths;
}

const { client } = Astro.props;

// Breadcrumb data
const breadcrumbItems = [
  { label: 'Free DevTools', href: '/freedevtools/' },
  { label: 'MCP Directory', href: '/freedevtools/mcp/' },
  { label: 'MCP Clients', href: '/freedevtools/mcp/clients/' },
  { label: client.name }
];

// SEO Data
const title = `${client.name} - MCP Client for AI Agents | Free DevTools by Hexmos`;
const description = `${client.description} ${client.platforms.join(', ')} client with ${client.rating}/5 rating. ${client.price} - ${client.license} license.`;
const keywords = [
  'mcp client',
  client.name.toLowerCase(),
  'model context protocol client',
  'ai agent client',
  'open source mcp',
  client.license.toLowerCase(),
  ...client.platforms.map(p => p.toLowerCase())
];

const canonical = `https://hexmos.com/freedevtools/mcp/clients/${client.id}/`;
---

<BaseLayout 
  name={client.name}
  title={title}
  path={canonical}
  description={description}
  canonical={canonical}
  themeColor="#3b82f6"
  keywords={keywords}
  ogImage="https://hexmos.com/freedevtools/tool-banners/mcp-client-banner.png"
  twitterImage="https://hexmos.com/freedevtools/tool-banners/mcp-client-banner.png"
  datePublished="2025-01-30"
  softwareVersion="1.0.0"
  features={[
    `${client.platforms.join(', ')} support`,
    `${client.rating}/5 rating`,
    `${client.price} pricing`,
    `${client.license} license`,
    'MCP compatible'
  ]}
>
  <div class="max-w-6xl mx-auto px-2 md:px-6">
    <McpClientDetail 
      client={client}
      breadcrumbItems={breadcrumbItems}
      client:load 
    />
  </div>
</BaseLayout>
