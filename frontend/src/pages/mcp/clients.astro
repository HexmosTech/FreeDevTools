---
import BaseLayout from '@/layouts/BaseLayout.astro';
import McpClients from './_McpClients';
import clientsData from './data/clients.json';

// Get data from JSON files
const totalClients = clientsData.pagination.total;

// SEO Data
const title = `MCP Clients - Browse ${totalClients.toLocaleString()}+ Model Context Protocol Clients | Free DevTools by Hexmos`;
const description = `Discover ${totalClients.toLocaleString()}+ MCP clients for AI agents. Find desktop, web, mobile, and CLI clients. Browse by platform and rating. Free, fast, no registration required.`;
const keywords = [
  'mcp clients',
  'model context protocol clients',
  'ai agent clients',
  'mcp client directory',
  'free mcp clients',
  'ai desktop clients',
  'mcp client browser',
  'open source mcp clients'
];

// Breadcrumb data
const breadcrumbItems = [
  { label: 'Free DevTools', href: '/freedevtools/' },
  { label: 'MCP Directory', href: '/freedevtools/mcp/' },
  { label: 'MCP Clients' }
];

// Get first page of clients for initial load
const initialClients = clientsData.clients.slice(0, 20);
const totalPages = Math.ceil(clientsData.pagination.total / clientsData.pagination.perPage);
---

<BaseLayout 
  name="MCP Clients"
  title={title}
  path="/freedevtools/mcp/clients/"
  description={description}
  canonical="https://hexmos.com/freedevtools/mcp/clients/"
  themeColor="#3b82f6"
  keywords={keywords}
  ogImage="https://hexmos.com/freedevtools/tool-banners/mcp-clients-banner.png"
  twitterImage="https://hexmos.com/freedevtools/tool-banners/mcp-clients-banner.png"
  datePublished="2025-01-30"
  softwareVersion="1.0.0"
  features={[
    `Browse ${totalClients.toLocaleString()}+ MCP clients`,
    'Filter by platform and rating',
    'Search and sort functionality',
    'Detailed client information',
    'Platform compatibility'
  ]}
>
  <div class="max-w-6xl mx-auto px-2 md:px-6">
    <McpClients 
      initialClients={initialClients}
      pagination={clientsData.pagination}
      filters={clientsData.filters}
      totalPages={totalPages}
      breadcrumbItems={breadcrumbItems}
      client:load 
    />
  </div>
</BaseLayout>
