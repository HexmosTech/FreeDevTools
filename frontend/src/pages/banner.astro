---
import AdBanner from '../components/banner/AdBanner';
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout 
  name="banner" 
  title="Free DevTools Banner" 
  path="/banner"
  description="Embeddable banner for Free DevTools"
  showSidebar={false}
  showHeader={false}
>
  <div class="banner-container">
    <AdBanner client:load />
  </div>
</BaseLayout>

<style>
  .banner-container {
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0;
  }
  
  /* Remove any page-level margins/padding */
  :global(body) {
    margin: 0;
    padding: 0;
  }
  
  :global(.banner-container > *) {
    margin: 0 !important;
  }
</style>
