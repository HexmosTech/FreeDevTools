---
import { getToolByKey } from '../../config/tools';
import BaseLayout from '../../layouts/BaseLayout.astro';
import DockerfileLinter from './_DockerfileLinter';

const tool = getToolByKey('dockerfile-linter');
---

<BaseLayout 
  title={`${tool?.name} - TODO: Add subtitle | Free DevTools`}
  description={tool?.description}
  canonical={tool?.canonical}
  themeColor={tool?.themeColor}
>
  <DockerfileLinter client:load />
</BaseLayout>
