---
import AdBanner from '../../components/banner/AdBanner';
import { getAllUniqueCheatSheets } from '../../config/cheatsheets';
import BaseLayout from '../../layouts/BaseLayout.astro';
---

<BaseLayout 
  name="Cheatsheets"
  path="/freedevtools/c/"
  title="Developer Cheatsheets - Quick References | Free DevTools"
  description="Collection of concise developer cheatsheets. Quick references for Git, Docker, and more."
  canonical="https://hexmos.com/freedevtools/c/"
  themeColor="#1e40af"
  showSidebar={false}
  showHeader={false}
>

  <div class="max-w-6xl mx-auto px-2 md:px-6">
    <header class="mb-8 flex items-center gap-4 md:gap-6 mt-8">
      <img src="/freedevtools/t/freedevtool-logo.webp" alt="Free DevTools Logo" class=" w-16 h-16 md:w-20 md:h-20 flex-shrink-0" />
      <div>
        <h2 class="mb-2 text-neon dark:text-neon-light ">
          Cheatsheets
        </h2>
        <h4 class="text-slate-800 dark:text-slate-400 m-0">
          Quick references for developers
        </h4>
      </div>
    </header>
    
    <main>
      <div class="mb-8 md:mb-0">
        <AdBanner client:load />
      </div>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-2 md:gap-4 lg:gap-8 mb-16">
        {getAllUniqueCheatSheets().map((item) => (
          <a href={item.path} class="block p-4 md:p-4 lg:p-8  bg-white dark:bg-slate-900 border border-slate-200 dark:border-slate-900 rounded-xl text-inherit no-underline transition-all duration-300 ease-in-out shadow-sm hover:-translate-y-1 hover:shadow-xl hover:border-neon dark:hover:border-neon-light">
            <h3 class="m-0 mb-2 md:mb-4 text-black dark:text-neon-light">
              {item.name}
            </h3>
            <p class="m-0 text-slate-800 dark:text-slate-400">
              {item.description}
            </p>
          </a>
        ))}
      </div>
      
   
    </main>
  </div>
</BaseLayout>

