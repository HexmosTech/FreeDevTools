---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getAllCheatsheets } from '../../lib/cheatsheets';
import CommandSearch from '../../components/CommandSearch';
import AdBanner from '../../components/banner/AdBanner';

const cheatsheets = await getAllCheatsheets();

// CSS-based lettered icons - no external dependencies


// Flatten all cheatsheets for search (CommandSearch expects a 'platform' field; use category)
const allCommands = Object.entries(cheatsheets).flatMap(([category, items]) =>
  items.map(item => ({ ...item, platform: category }))
);
---

<BaseLayout 
  name="Cheatsheets"
  path="/c/"
  title="Cheatsheets - Free DevTools"
  description="Concise, easy-to-scan reference pages that summarize commands, syntax, and key concepts for faster learning and recall."
  canonical="https://hexmos.com/freedevtools/c/"
  themeColor="#1e40af"
  showSidebar={false}
  showHeader={true}
>
  <div class="max-w-6xl mx-auto px-2 md:px-6">
    <div class="mb-16 mt-[74px]">
      <AdBanner />
    </div>
    <div class="mb-8">
      <nav class="text-sm text-slate-600 dark:text-slate-400 mb-4">
        <a href="/freedevtools/" class="hover:text-blue-600 dark:hover:text-blue-400">Free DevTools</a>
        <span class="mx-2">/</span>
        <span>Cheatsheets</span>
      </nav>
      
      <h1 class="text-3xl font-bold text-slate-900 dark:text-slate-100 mb-4">
        Cheatsheets
      </h1>
      <p class="text-lg text-slate-600 dark:text-slate-400 mb-6">
        Concise, skimmable references for languages, frameworks, tools, and platforms.
      </p>
      
      <div class="max-w-md">
        <CommandSearch 
          commands={allCommands}
          client:load
        />
      </div>
    </div>

    <script>
      // Handle cheatsheet search navigation
      document.addEventListener('commandSelected', (event) => {
        const customEvent = event as CustomEvent;
        const selected = customEvent.detail;
        window.location.href = selected.url;
      });
    </script>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-2 md:gap-4 lg:gap-8">
      {Object.entries(cheatsheets).map(([category, items]) => (
        <div class="bg-white dark:bg-slate-900 border border-slate-200 dark:border-slate-900 rounded-xl p-4 md:p-4 lg:p-8 transition-all duration-300 ease-in-out shadow-sm hover:-translate-y-1 hover:shadow-xl hover:border-border">
          <div class="flex items-center mb-4">
            <div class="w-10 h-10 bg-gradient-to-br from-blue-500 to-blue-600 dark:from-blue-600 dark:to-blue-700 rounded-lg flex items-center justify-center mr-3 border border-slate-200 dark:border-slate-700 shadow-sm">
              <span class="text-white font-bold text-lg select-none">
                {category.charAt(0).toUpperCase()}
              </span>
            </div>
            <a 
              href={`/freedevtools/c/${category}`}
              class="text-xl font-semibold text-black dark:text-neon-light capitalize hover:text-blue-600 dark:hover:text-blue-400 transition-colors"
            >
              {category.replace('-', ' ')}
            </a>
          </div>
          
          <p class="text-sm text-slate-800 dark:text-slate-400 mb-4 m-0">
            {items.length} cheatsheets available
          </p>
          
          <div class="space-y-2">
            {items.slice(0, 5).map((sheet) => (
              <a 
                href={`/freedevtools/c/${category}/${sheet.name}`}
                class="block text-sm text-blue-600 dark:text-blue-400 hover:text-black dark:hover:text-white hover:font-bold"
              >
                {sheet.name}
              </a>
            ))}
            {items.length > 5 && (
              <p class="text-xs text-slate-500 dark:text-slate-500">
                +{items.length - 5} more items
              </p>
            )}
          </div>
          
          <div class="mt-4 pt-4 border-t border-slate-200 dark:border-slate-900">
            <a 
              href={`/freedevtools/c/${category}`}
              class="text-sm font-medium text-blue-600 dark:text-blue-400 hover:text-blue-800 dark:hover:text-blue-300"
            >
              View all {category} cheatsheets â†’
            </a>
          </div>
        </div>
      ))}
    </div>
  </div>
</BaseLayout>
