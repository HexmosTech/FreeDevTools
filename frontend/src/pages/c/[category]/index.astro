---
import AdBanner from '../../../components/banner/AdBanner';
import BaseLayout from '../../../layouts/BaseLayout.astro';
import { getSheetsByCategory } from '../../../lib/cheatsheets';

export async function getStaticPaths() {
  const sheetFiles = import.meta.glob('/src/pages/html_pages/cheatsheets/**/*.html', { eager: true });
  const categories = new Set<string>();
  
  for (const path of Object.keys(sheetFiles)) {
    const pathParts = path.split('/');
    const category = pathParts[pathParts.length - 2];
    categories.add(category);
  }
  
  return Array.from(categories).map(category => ({
    params: { category }
  }));
}

const { category } = Astro.params;
const sheets = await getSheetsByCategory(category!);
---

<BaseLayout 
  name={`${category} Cheatsheets`}
  path={`/c/${category}/`}
  title={`${category} Cheatsheets - Free DevTools`}
  description={`Curated cheatsheets for ${category}.`}
  canonical={`https://hexmos.com/freedevtools/c/${category}/`}
  themeColor="#1e40af"
  showSidebar={false}
  showHeader={true}
>
  <div class="max-w-6xl mx-auto px-2 md:px-6">
    <div class="mb-16 mt-[74px]">
      <AdBanner />
    </div>
    <div class="mb-8">
      <nav class="text-sm text-slate-600 dark:text-slate-400 mb-4">
        <a href="/freedevtools/" class="hover:text-blue-600 dark:hover:text-blue-400">Free DevTools</a>
        <span class="mx-2">/</span>
        <a href="/freedevtools/c/" class="hover:text-blue-600 dark:hover:text-blue-400">Cheatsheets</a>
        <span class="mx-2">/</span>
        <span class="capitalize">{category}</span>
      </nav>
      
      <h1 class="text-3xl font-bold text-slate-900 dark:text-slate-100 mb-4 capitalize">
        {category} Cheatsheets
      </h1>
      <p class="text-lg text-slate-600 dark:text-slate-400">
        {sheets.length} cheatsheets in {category}
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-2 md:gap-4 lg:gap-8">
      {sheets.map((sheet) => (
        <a 
          href={sheet.url}
          class="block bg-white dark:bg-slate-900 border border-slate-200 dark:border-slate-900 rounded-xl p-4 md:p-4 lg:p-8 transition-all duration-300 ease-in-out shadow-sm hover:-translate-y-1 hover:shadow-xl hover:border-border"
        >
          <div class="flex items-center justify-between mb-2">
            <h3 class="font-mono text-lg font-semibold text-black dark:text-neon-light m-0 mb-2 md:mb-4">
              {sheet.name}
            </h3>
            <span class="text-blue-600 dark:text-blue-400">â†’</span>
          </div>
          <p class="text-sm text-slate-800 dark:text-slate-400 m-0">
            {sheet.description}
          </p>
        </a>
      ))}
    </div>
  </div>
</BaseLayout>


