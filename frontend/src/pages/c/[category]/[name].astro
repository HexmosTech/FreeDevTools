---
import AdBanner from '../../../components/banner/AdBanner';
import BaseLayout from '../../../layouts/BaseLayout.astro';
import { getCheatsheet } from '../../../lib/cheatsheets';

export async function getStaticPaths() {
  const sheetFiles = import.meta.glob('/src/pages/html_pages/cheatsheets/**/*.html', { eager: true });
  const paths: Array<{ params: { category: string; name: string } }> = [];
  
  for (const path of Object.keys(sheetFiles)) {
    const pathParts = path.split('/');
    const category = pathParts[pathParts.length - 2];
    const fileName = pathParts[pathParts.length - 1];
    const name = fileName.replace('.html', '');
    
    paths.push({
      params: { category, name }
    });
  }
  
  return paths;
}

const { category, name } = Astro.params;
const htmlContent = await getCheatsheet(category!, name!);

if (!htmlContent) {
  return Astro.redirect('/404');
}

const title = name;
const description = `Cheatsheet for ${name}`;
---

<BaseLayout 
  name={title}
  path={`/c/${category}/${name}/`}
  title={`${title} - ${category} Cheatsheets - Free DevTools`}
  description={description}
  canonical={`https://hexmos.com/freedevtools/c/${category}/${name}/`}
  themeColor="#1e40af"
  showSidebar={false}
  showHeader={true}
>
  <div class="max-w-4xl mx-auto px-2 md:px-6">
    <div class="mb-16 mt-[74px]">
      <AdBanner />
    </div>
    <nav class="text-sm text-slate-600 dark:text-slate-400 mb-6">
      <a href="/freedevtools/" class="hover:text-blue-600 dark:hover:text-blue-400">Free DevTools</a>
      <span class="mx-2">/</span>
      <a href="/freedevtools/c/" class="hover:text-blue-600 dark:hover:text-blue-400">Cheatsheets</a>
      <span class="mx-2">/</span>
      <a href={`/freedevtools/c/${category}/`} class="hover:text-blue-600 dark:hover:text-blue-400 capitalize">{category}</a>
      <span class="mx-2">/</span>
      <span class="font-mono">{name}</span>
    </nav>

    <article class="max-w-none">
      <header class="mb-8">
        <h1 class="text-3xl font-bold text-slate-900 dark:text-slate-100 mb-4 font-mono">
          {name}
        </h1>
        <p class="text-lg text-slate-600 dark:text-slate-400 mb-4">
          {description}
        </p>
      </header>

      <div class="bg-slate-50 dark:bg-slate-800/50 rounded-lg p-6">
        <div class="html-content prose prose-slate dark:prose-invert max-w-none" set:html={htmlContent} />
      </div>
    </article>

    <div class="mt-8 pt-6 border-t border-slate-200 dark:border-slate-700">
      <div class="flex flex-wrap gap-4">
        <a 
          href={`/freedevtools/c/${category}/`}
          class="inline-flex items-center px-4 py-2 text-sm font-medium text-blue-600 dark:text-blue-400 bg-blue-50 dark:bg-blue-900/20 rounded-lg hover:bg-blue-100 dark:hover:bg-blue-900/30 transition-colors"
        >
          ‚Üê Back to {category} cheatsheets
        </a>
        <a 
          href="/freedevtools/c/"
          class="inline-flex items-center px-4 py-2 text-sm font-medium text-slate-600 dark:text-slate-400 bg-slate-50 dark:bg-slate-800 rounded-lg hover:bg-slate-100 dark:hover:bg-slate-700 transition-colors"
        >
          All cheatsheets
        </a>
      </div>
    </div>
  </div>
</BaseLayout>


