---
import AdBanner from '../components/banner/AdBanner';
import ThemeSwitcher from '../components/theme/ThemeSwitcher';
import BaseLayout from '../layouts/BaseLayout.astro';
import { Search } from 'lucide-react';
// Simple homepage for the dev tools
---

<BaseLayout 
  name="Free DevTools"
  path="/t/"
  title="Free DevTools - Essential Developer Utilities Online | No Registration Required"
  description="Collection of free, open-source developer tools. 50,000+ Free Dev Resources - No Login Required. Boost your productivity with our online utilities."
  canonical="https://hexmos.com/freedevtools/"
  themeColor="#1e40af"
  showSidebar={false}
  showHeader={false}
>

  <div id="main-page" class="max-w-6xl mx-auto px-2 md:px-6">
    <header class="mb-8 flex items-center justify-between gap-4 md:gap-6 mt-8">
      <div class="flex items-center gap-4 md:gap-6">
        <img src="/freedevtools/t/freedevtool-logo.webp" alt="Free DevTools Logo" class=" w-16 h-16 md:w-20 md:h-20 flex-shrink-0" />
        <div>
          <h1 class="mb-2 text-neon dark:text-neon-light tracking-widest !text-xl md:!text-2xl !lg:text-5xl">
            Free DevTools
          </h1>
          <h4 class="text-slate-800 dark:text-slate-400 m-0 !text-sm md:!text-base lg:!text-xl">
            50,000+ Free Dev Resources - No Login Required
          </h4>
        </div>
      </div>
      <div class="flex items-center gap-4">
        <!-- Search Bar -->
        <div class="relative hidden md:block">
          <div class="relative flex items-center justify-start text-sm text-gray-500 dark:text-gray-400 bg-white/50 dark:bg-gray-800/50 backdrop-blur-sm border border-gray-300 dark:border-gray-600 rounded-md px-3 py-2 transition-colors hover:bg-white/70 dark:hover:bg-gray-800/70">
            <Search className="mr-2 h-4 w-4" />
            <input
              id="homeSearchInput"
              type="text"
              class="w-64 bg-transparent border-none outline-none focus:ring-0 focus:outline-none placeholder:text-gray-500 dark:placeholder:text-gray-400"
              placeholder="Search Dev Resources..."
            />
            <kbd class="pointer-events-none absolute right-1.5 top-1.6 hidden h-5 select-none items-center gap-1 rounded border bg-gray-100 dark:bg-gray-700 px-1.5 font-mono text-[10px] font-medium opacity-100 sm:flex">
              <span class="text-xs">‚åò</span>K
            </kbd>
          </div>
        </div>
        <ThemeSwitcher client:load />
      </div>
    </header>
    <script>
      // Set up search functionality
      const searchInput = document.getElementById('homeSearchInput');
      if (searchInput) {
        // Handle input change with debounce
        let timeoutId = null;
        
        searchInput.addEventListener('input', (e) => {
          const query = e.target.value;
          
          // Clear any existing timeout
          if (timeoutId) {
            clearTimeout(timeoutId);
          }
          
          // Set a new timeout to navigate after typing stops
          if (query.trim()) {
            timeoutId = setTimeout(() => {
              window.location.href = `/freedevtools/search?q=${encodeURIComponent(query)}`;
            }, 500); // Wait for 500ms after typing stops
          }
        });
        
        // Handle Enter key press
        searchInput.addEventListener('keydown', (e) => {
          if (e.key === 'Enter') {
            const query = e.target.value;
            if (query.trim()) {
              // Clear the timeout to prevent duplicate navigation
              if (timeoutId) {
                clearTimeout(timeoutId);
              }
              window.location.href = `/freedevtools/search?q=${encodeURIComponent(query)}`;
            }
          }
        });

        // Handle keyboard shortcut cmd+k or ctrl+k
        document.addEventListener('keydown', (e) => {
          if (e.key === 'k' && (e.metaKey || e.ctrlKey)) {
            e.preventDefault();
            searchInput.focus();
          }
        });
      }
    </script>
    <main>
      <div class="mb-8 md:mb-0">
        <AdBanner client:load />
      </div>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-2 md:gap-4 lg:gap-8 mb-16">
