---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { generatePngIconsStaticPaths } from '../../lib/png-icons-utils';
import PngIcons from './_PngIcons.astro';

// Generate static paths for paginated routes
export async function getStaticPaths() {
  return await generatePngIconsStaticPaths();
}

const { type, page, itemsPerPage, totalPages, categories } = Astro.props;

// Redirect /png_icons/1 to /png_icons
if (type === 'pagination' && page === 1) {
  return Astro.redirect('/freedevtools/png_icons/');
}

const currentPage = page;
const totalCategories = categories.length;

// Calculate total PNG icons across all categories
const totalPngIcons = categories.reduce((total: number, category: any) => total + category.iconCount, 0);

// Get categories for current page
const startIndex = (currentPage - 1) * itemsPerPage;
const endIndex = startIndex + itemsPerPage;
const currentPageCategories = categories.slice(startIndex, endIndex);

// Breadcrumb data
const breadcrumbItems = [
  { label: 'Free DevTools', href: '/freedevtools/' },
  { label: 'PNG Icons', href: '/freedevtools/png_icons/' },
  { label: `Page ${currentPage}` }
];

// SEO data
const seoTitle = `Free PNG Icons - Page ${currentPage} | Online Free DevTools by Hexmos`;
const seoDescription = `Browse page ${currentPage} of ${totalPages} pages in our free PNG icons collection. Download thousands of vector graphics instantly. No registration required.`;
const canonical = `https://hexmos.com/freedevtools/png_icons/${currentPage}/`;

// Enhanced keywords for paginated content
const paginatedKeywords = [
  "png icons",
  "vector graphics", 
  "free icons",
  "download icons",
  "edit icons",
  `page ${currentPage}`,
  "pagination",
  "icon collection",
  "vector graphics library"
];

---

<BaseLayout 
  name="PNG Icons"
  path={`/freedevtools/png_icons/${currentPage}/`}
  title={seoTitle}
  description={seoDescription}
  canonical={canonical}
  
  
  showHeader={true}
  totalItems={totalCategories}
  itemsPerPage={itemsPerPage}
  currentPage={currentPage}
  category="PNG Icons"
  partOf="Free DevTools"
  partOfUrl="https://hexmos.com/freedevtools/"
  keywords={paginatedKeywords}
  features={["Download", "Edit colors", "Add backgrounds", "Customize", "No registration"]}
>
  <PngIcons 
    categories={currentPageCategories}
    currentPage={currentPage}
    totalPages={totalPages}
    totalCategories={totalCategories}
    totalPngIcons={totalPngIcons}
    breadcrumbItems={breadcrumbItems}
  />
</BaseLayout>
