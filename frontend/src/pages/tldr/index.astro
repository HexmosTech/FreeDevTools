---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getAllCommands } from '../../lib/commands';
import CommandSearch from '../../components/CommandSearch';

const commands = await getAllCommands();

// Flatten all commands for search
const allCommands = Object.entries(commands).flatMap(([platform, platformCommands]) =>
  platformCommands.map(command => ({ ...command, platform }))
);
---

<BaseLayout 
  name="TLDR"
  path="/tldr/"
  title="TLDR - Command Documentation - Free DevTools"
  description="Comprehensive documentation for command-line tools across different platforms including Linux, macOS, Windows, Android, and more."
  canonical="https://hexmos.com/freedevtools/t/tldr/"
  themeColor="#1e40af"
  showSidebar={false}
  showHeader={true}
>
  <div class="max-w-6xl mx-auto px-2 md:px-6">
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-slate-900 dark:text-slate-100 mb-4">
        TLDR
      </h1>
      <p class="text-lg text-slate-600 dark:text-slate-400 mb-6">
        Comprehensive documentation for command-line tools across different platforms.
      </p>
      
      <div class="max-w-md">
        <CommandSearch 
          commands={allCommands}
          client:load
        />
      </div>
    </div>

    <script>
      // Handle command search navigation
      document.addEventListener('commandSelected', (event) => {
        const customEvent = event as CustomEvent;
        const command = customEvent.detail;
        window.location.href = command.url;
      });
    </script>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {Object.entries(commands).map(([platform, platformCommands]) => (
        <div class="bg-white dark:bg-slate-800 rounded-lg border border-slate-200 dark:border-slate-700 p-6 hover:shadow-lg transition-shadow">
          <div class="flex items-center mb-4">
            <div class="w-10 h-10 bg-blue-100 dark:bg-blue-900/20 rounded-lg flex items-center justify-center mr-3">
              <span class="text-blue-600 dark:text-blue-400 font-bold text-lg">
                {platform.charAt(0).toUpperCase()}
              </span>
            </div>
            <h2 class="text-xl font-semibold text-slate-900 dark:text-slate-100 capitalize">
              {platform.replace('-', ' ')}
            </h2>
          </div>
          
          <p class="text-sm text-slate-600 dark:text-slate-400 mb-4">
            {platformCommands.length} commands available
          </p>
          
          <div class="space-y-2">
            {platformCommands.slice(0, 5).map((command) => (
              <a 
                href={`/freedevtools/t/tldr/${platform}/${command.name}`}
                class="block text-sm text-blue-600 dark:text-blue-400 hover:text-blue-800 dark:hover:text-blue-300 hover:underline"
              >
                {command.name}
              </a>
            ))}
            {platformCommands.length > 5 && (
              <p class="text-xs text-slate-500 dark:text-slate-500">
                +{platformCommands.length - 5} more commands
              </p>
            )}
          </div>
          
          <div class="mt-4 pt-4 border-t border-slate-200 dark:border-slate-700">
            <a 
              href={`/freedevtools/t/tldr/${platform}`}
              class="text-sm font-medium text-blue-600 dark:text-blue-400 hover:text-blue-800 dark:hover:text-blue-300"
            >
              View all {platform} commands â†’
            </a>
          </div>
        </div>
      ))}
    </div>
  </div>
</BaseLayout>
