---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import { getCommand } from '../../../lib/commands';

export async function getStaticPaths() {
  const commandFiles = import.meta.glob('/src/pages/markdown_pages/**/*.md', { eager: true });
  const paths: Array<{ params: { platform: string; command: string } }> = [];
  
  for (const path of Object.keys(commandFiles)) {
    const pathParts = path.split('/');
    const platform = pathParts[pathParts.length - 2];
    const fileName = pathParts[pathParts.length - 1];
    const command = fileName.replace('.md', '');
    
    paths.push({
      params: { platform, command }
    });
  }
  
  return paths;
}

const { platform, command } = Astro.params;
const commandFile = await getCommand(platform!, command!);

if (!commandFile) {
  return Astro.redirect('/404');
}

const { Content, frontmatter } = commandFile;
const title = frontmatter?.title || command;
const description = frontmatter?.description || `Documentation for ${command} command`;
---

<BaseLayout 
  name={title}
  path={`/tldr/${platform}/${command}/`}
  title={`${title} - ${platform} Commands - TLDR - Free DevTools`}
  description={description}
  canonical={`https://hexmos.com/freedevtools/t/tldr/${platform}/${command}/`}
  themeColor="#1e40af"
  showSidebar={false}
  showHeader={true}
>
  <div class="max-w-4xl mx-auto px-2 md:px-6">
    <nav class="text-sm text-slate-600 dark:text-slate-400 mb-6">
      <a href="/freedevtools/t/tldr/" class="hover:text-blue-600 dark:hover:text-blue-400">TLDR</a>
      <span class="mx-2">/</span>
      <a href={`/freedevtools/t/tldr/${platform}/`} class="hover:text-blue-600 dark:hover:text-blue-400 capitalize">{platform}</a>
      <span class="mx-2">/</span>
      <span class="font-mono">{command}</span>
    </nav>

    <article class="max-w-none">
      <header class="mb-8">
        <h1 class="text-3xl font-bold text-slate-900 dark:text-slate-100 mb-4 font-mono">
          {command}
        </h1>
        {frontmatter?.description && (
          <p class="text-lg text-slate-600 dark:text-slate-400 mb-4">
            {frontmatter.description}
          </p>
        )}
        {frontmatter?.more_information && (
          <p class="text-sm text-slate-500 dark:text-slate-500">
            More information: <a href={frontmatter.more_information} class="text-blue-600 dark:text-blue-400 hover:underline" target="_blank" rel="noopener noreferrer">{frontmatter.more_information}</a>
          </p>
        )}
      </header>

      <div class="prose prose-slate dark:prose-invert max-w-none bg-slate-50 dark:bg-slate-800/50 rounded-lg p-6">
        <Content />
      </div>
    </article>

    <div class="mt-8 pt-6 border-t border-slate-200 dark:border-slate-700">
      <div class="flex flex-wrap gap-4">
        <a 
          href={`/freedevtools/t/tldr/${platform}/`}
          class="inline-flex items-center px-4 py-2 text-sm font-medium text-blue-600 dark:text-blue-400 bg-blue-50 dark:bg-blue-900/20 rounded-lg hover:bg-blue-100 dark:hover:bg-blue-900/30 transition-colors"
        >
          ‚Üê Back to {platform} commands
        </a>
        <a 
          href="/freedevtools/t/tldr/"
          class="inline-flex items-center px-4 py-2 text-sm font-medium text-slate-600 dark:text-slate-400 bg-slate-50 dark:bg-slate-800 rounded-lg hover:bg-slate-100 dark:hover:bg-slate-700 transition-colors"
        >
          All commands
        </a>
      </div>
    </div>
  </div>
</BaseLayout>
