---
import { getEmojiCategories } from '../../lib/emojis';

export async function getStaticPaths() {
  const categories = getEmojiCategories();
  
  return categories
    .filter((category) => category && category.trim() !== '')
    .map((category) => ({
      params: { category: category.toLowerCase().replace(/[^a-z0-9]+/g, '-') },
      props: { category }
    }));
}

// Redirect to paginated version
const { category: categorySlug } = Astro.params;
return Astro.redirect(`/freedevtools/emojis/${categorySlug}/1/`);
