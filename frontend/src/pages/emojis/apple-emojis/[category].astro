---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import AdBanner from '../../../components/banner/AdBanner';
import { getEmojisByCategory, getEmojiCategories } from '../../../lib/emojis';


export async function getStaticPaths() {
  const categories = getEmojiCategories();
  return categories
    .filter((cat) => cat && cat.trim() !== '')
    .map((cat) => ({
      params: { category: cat.toLowerCase().replace(/[^a-z0-9]+/g, '-') },
      props: { category: cat },
    }));
}

const { category: categorySlug } = Astro.params;
const categoryName =
  (Astro.props?.category as string) ||
  categorySlug!.replace(/-/g, ' ').replace(/\b\w/g, (l) => l.toUpperCase());

const emojis = getEmojisByCategory(categoryName);

if (emojis.length === 0) {
  return Astro.redirect('/freedevtools/emojis/apple-emojis/');
}

