---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout 
  name="Terms of Use"
  path="/termsofuse"
  title="Terms of Use | Online Free DevTools by Hexmos | Creative Commons License"
  description="Terms of Use for Free DevTools. This content is licensed under Creative Commons Attribution 4.0 International License (CC BY 4.0)."
  canonical="https://hexmos.com/freedevtools/termsofuse/"
  themeColor="#1e40af"
