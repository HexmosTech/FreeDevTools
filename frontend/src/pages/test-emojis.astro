---
import { getAllEmojis } from '../lib/emojis';

const emojis = getAllEmojis();
---

<html>
<head>
  <title>Test Emojis</title>
</head>
<body>
  <h1>Emoji Test Page</h1>
  <p>Total emojis loaded: {emojis.length}</p>
  
  {emojis.length > 0 && (
    <div>
      <h2>First 5 emojis:</h2>
      <ul>
        {emojis.slice(0, 5).map(emoji => (
          <li key={emoji.slug}>
            {emoji.code} - {emoji.title} ({emoji.slug})
          </li>
        ))}
      </ul>
    </div>
  )}
  
  {emojis.length === 0 && (
    <p>No emojis loaded. Check console for errors.</p>
  )}
</body>
</html>
