---
import BaseLayout from '../../layouts/BaseLayout.astro';
import JsonPrettifier from './_JsonPrettifier.tsx';
import { getToolByKey } from '../../config/tools';

const tool = getToolByKey('json-prettifier');
---

<BaseLayout 
  title={`${tool.name} - Format, Minify & Validate JSON Online | Free DevTools`}
  description={tool.description}
  canonical={tool.canonical}
  themeColor={tool.themeColor}
>
  <JsonPrettifier client:load />
</BaseLayout> 