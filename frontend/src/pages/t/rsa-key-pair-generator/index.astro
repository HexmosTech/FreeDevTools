---
import type { Tool } from '@/config/tools';
import { getToolByKey } from '@/config/tools';
import BaseLayout from '@/layouts/BaseLayout.astro';
import RsaKeyPairGenerator from './_RsaKeyPairGenerator.tsx';

const tool = getToolByKey('rsa-key-pair-generator') as Tool;
---

<BaseLayout 
   name={tool.name}
  title={tool.title}
  path={tool.path}
  description={tool.description}
  canonical={tool.canonical}
  themeColor={tool.themeColor}
  keywords={tool.keywords}
  ogImage={tool.ogImage}
  twitterImage={tool.twitterImage}
  datePublished={tool.datePublished}
  softwareVersion={tool.softwareVersion}
  features={tool.features}
>
  <RsaKeyPairGenerator client:load />
</BaseLayout>
