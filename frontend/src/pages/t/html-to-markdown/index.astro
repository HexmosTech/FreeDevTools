---
import type { Tool } from 'src/config/tools';
import { getToolByKey } from 'src/config/tools';
import BaseLayout from 'src/layouts/BaseLayout.astro';
import HtmlToMarkdown from './_HtmlToMarkdown';

const tool = getToolByKey('html-to-markdown') as Tool;
---

<BaseLayout 
   name={tool.name}
  title={tool.title}
  path={tool.path}
  description={tool.description}
  canonical={tool.canonical}
  themeColor={tool.themeColor}
  keywords={tool.keywords}
  ogImage={tool.ogImage}
  twitterImage={tool.twitterImage}
  datePublished={tool.datePublished}
  softwareVersion={tool.softwareVersion}
  features={tool.features}
>
  <HtmlToMarkdown client:load />
</BaseLayout>