---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getAllManpages, getMainCategoryDisplayName } from '../../lib/manpages';
import CommandSearch from '../../components/CommandSearch';
import AdBanner from '../../components/banner/AdBanner';

const manpages = await getAllManpages();

// Calculate total counts
const totalSubcategories = Object.values(manpages).reduce((total, mainCat) => 
  total + Object.keys(mainCat).length, 0
);
const totalPages = Object.values(manpages).reduce((total, mainCat) => 
  total + Object.values(mainCat).reduce((subTotal, subCat) => subTotal + subCat.length, 0), 0
);

// Flatten all manpages for search (CommandSearch expects a 'platform' field; use mainCategory)
const allCommands = Object.entries(manpages).flatMap(([mainCategory, subcategories]) =>
  Object.entries(subcategories).flatMap(([subcategory, items]) =>
    items.map(item => ({ ...item, platform: mainCategory }))
  )
);
---

<BaseLayout 
  name="Manual Pages"
  path="/m/"
  title="Manual Pages | Online Free DevTools by Hexmos"
  description="Comprehensive Unix and Linux manual pages. Access command documentation, system calls, library functions, and configuration files."
  canonical="https://hexmos.com/freedevtools/m/"
  themeColor="#059669"
  showSidebar={false}
  showHeader={true}
  totalItems={Object.keys(manpages).length}
  keywords={["manual pages", "man pages", "unix documentation", "linux commands", "system calls", "library functions"]}
  features={["Complete documentation", "System calls", "Library functions", "Configuration files", "Free access"]}
  commandCategory="Documentation"
>
  <div class="max-w-6xl mx-auto px-2 md:px-6">
    <div class="mb-16 mt-[74px]">
      <AdBanner />
    </div>
    <div class="mb-8">
      <nav class="text-sm text-slate-600 dark:text-slate-400 mb-4">
        <a href="/freedevtools/" class="hover:text-green-600 dark:hover:text-green-400">Free DevTools</a>
        <span class="mx-2">/</span>
        <span>Manual Pages</span>
      </nav>
      
      <h1 class="text-3xl font-bold text-slate-900 dark:text-slate-100 mb-4">
        Manual Pages
      </h1>
      <p class="text-lg text-slate-600 dark:text-slate-400 mb-6">
        Comprehensive Unix and Linux manual pages for commands, system calls, library functions, and more.
      </p>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6">
        <div class="bg-green-50 dark:bg-green-900/20 rounded-lg p-4">
          <div class="text-2xl font-bold text-green-600 dark:text-green-400">{Object.keys(manpages).length}</div>
          <div class="text-sm text-slate-600 dark:text-slate-400">Main Categories</div>
        </div>
        <div class="bg-green-50 dark:bg-green-900/20 rounded-lg p-4">
          <div class="text-2xl font-bold text-green-600 dark:text-green-400">{totalSubcategories}</div>
          <div class="text-sm text-slate-600 dark:text-slate-400">Subcategories</div>
        </div>
        <div class="bg-green-50 dark:bg-green-900/20 rounded-lg p-4">
          <div class="text-2xl font-bold text-green-600 dark:text-green-400">{totalPages.toLocaleString()}</div>
          <div class="text-sm text-slate-600 dark:text-slate-400">Manual Pages</div>
        </div>
      </div>
    </div>

    <script>
      // Handle manpage search navigation
      document.addEventListener('commandSelected', (event) => {
        const customEvent = event as CustomEvent;
        const selected = customEvent.detail;
        window.location.href = selected.url;
      });
    </script>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-2 md:gap-4 lg:gap-8">
      {Object.entries(manpages).map(([mainCategory, subcategories]) => {
        const subcategoryCount = Object.keys(subcategories).length;
        const totalPagesInCategory = Object.values(subcategories).reduce((total, pages) => total + pages.length, 0);
        
        return (
          <div class="bg-white dark:bg-slate-900 border border-slate-200 dark:border-slate-900 rounded-xl p-4 md:p-4 lg:p-8 transition-all duration-300 ease-in-out shadow-sm hover:-translate-y-1 hover:shadow-xl hover:border-border">
            <div class="flex items-center mb-4">
              <div class="w-10 h-10 bg-gradient-to-br from-green-500 to-green-600 dark:from-green-600 dark:to-green-700 rounded-lg flex items-center justify-center mr-3 border border-slate-200 dark:border-slate-700 shadow-sm">
                <span class="text-white font-bold text-lg select-none">
                  {mainCategory.charAt(0).toUpperCase()}
                </span>
              </div>
              <a 
                href={`/freedevtools/m/${mainCategory}/`}
                class="text-xl font-semibold text-black dark:text-neon-light hover:text-green-600 dark:hover:text-green-400 transition-colors"
              >
                {getMainCategoryDisplayName(mainCategory)}
              </a>
            </div>
            
            <div class="grid grid-cols-2 gap-4 mb-4">
              <div>
                <div class="text-sm text-slate-800 dark:text-slate-400">{subcategoryCount} subcategories</div>
              </div>
              <div>
                <div class="text-sm text-slate-800 dark:text-slate-400">{totalPagesInCategory.toLocaleString()} pages</div>
              </div>
            </div>
            
            <div class="space-y-2">
              {Object.entries(subcategories).slice(0, 5).map(([subcategory, pages]) => (
                <a 
                  href={`/freedevtools/m/${mainCategory}/${subcategory}/`}
                  class="block text-sm text-green-600 dark:text-green-400 hover:text-black dark:hover:text-white hover:font-bold"
                >
                  {subcategory.replace('-', ' ')} ({pages.length})
                </a>
              ))}
              {subcategoryCount > 5 && (
                <p class="text-xs text-slate-500 dark:text-slate-500">
                  +{subcategoryCount - 5} more subcategories
                </p>
              )}
            </div>
            
            <div class="mt-4 pt-4 border-t border-slate-200 dark:border-slate-900">
              <a 
                href={`/freedevtools/m/${mainCategory}/`}
                class="text-sm font-medium text-green-600 dark:text-green-400 hover:text-green-800 dark:hover:text-green-300"
              >
                View all {getMainCategoryDisplayName(mainCategory)} →
              </a>
            </div>
          </div>
        );
      })}
    </div>
    
    <!-- Credits Section -->
    <div class="mt-10 pt-6 mb-8 border-t border-slate-200 dark:border-slate-700">
      <div class="flex flex-wrap gap-4">
        <a 
          href="/freedevtools/" 
          class="inline-flex items-center px-4 py-2 text-sm font-medium text-green-600 dark:text-green-400 bg-green-50 dark:bg-green-900/20 rounded-lg hover:bg-green-100 dark:hover:bg-green-900/30 transition-colors"
        >
          ← Back to Free DevTools
        </a>
        <a 
          href="/freedevtools/m/credits/"
          class="inline-flex items-center px-4 py-2 text-sm font-medium text-slate-600 dark:text-slate-400 bg-slate-50 dark:bg-slate-800 rounded-lg hover:bg-slate-100 dark:hover:bg-slate-700 transition-colors"
        >
          Credits & Acknowledgments
        </a>
      </div>
    </div>
  </div>
</BaseLayout>
