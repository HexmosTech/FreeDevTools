---
import BaseLayout from '../../layouts/BaseLayout.astro';
import DateTimeConverter from './_DateTimeConverter.tsx';
import { getToolByKey } from '../../config/tools';

const tool = getToolByKey('date-time-converter');
---

<BaseLayout 
  title={`${tool.name} - Instant date-time converter`}
  description={tool.description}
  canonical={tool.canonical}
  themeColor={tool.themeColor}
>
  <DateTimeConverter client:load />
</BaseLayout>
