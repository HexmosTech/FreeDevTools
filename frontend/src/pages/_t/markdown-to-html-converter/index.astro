---
import type { Tool } from '@/config/tools';
import { getToolByKey } from '@/config/tools';
import ToolDetailLayout from '@/components/tool/ToolDetailLayout.astro';
import MarkdownToHtmlConverter from './_MarkdownToHtmlConverter';

const tool = getToolByKey('markdown-to-html-converter') as Tool;
---

<ToolDetailLayout tool={tool}>
  <MarkdownToHtmlConverter client:load />
</ToolDetailLayout>
