---
import { IconSvg as IconSvgComponent } from './IconSvg.tsx';

interface Props {
  iconName: string;
  className?: string;
  width?: string | number;
  height?: string | number;
  fill?: string;
}

const {
  iconName,
  className = '',
  width = 16,
  height = 16,
  fill = 'currentColor',
} = Astro.props;
---

<IconSvgComponent
  client:load
  iconName={iconName}
  className={className}
  width={width}
  height={height}
  fill={fill}
/>
